# Database Configuration
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://username:password@localhost:5432/celebrity_db"

# Next.js Configuration
# Public site URL (used for SEO, sitemap, robots.txt)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Node Environment
# Options: development, production, test
NODE_ENV="development"

# Application Settings
# Application name
NEXT_PUBLIC_APP_NAME="CelebHub"

# Deployment Configuration (Optional)
# Port for production server
PORT=3000

# Security (Production Only)
# Set to true in production for enhanced security
NEXT_TELEMETRY_DISABLED=1

# Image Upload Configuration
# Local upload directory path
UPLOAD_DIR="./public/uploads"
# Maximum file size in MB
MAX_FILE_SIZE=5

# Authentication (NextAuth.js)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

